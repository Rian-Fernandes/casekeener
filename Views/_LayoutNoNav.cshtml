<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - casekeener</title>
    <link rel="stylesheet" href="/lib/bootstrap5/dist/css/bootstrap.css">
    <link rel="stylesheet" href="~/css/estilos.css">
    <style>
        body {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            background-color: #0d026b;
            
        }
        .container {
            max-width: 400px;
            width: 100%;
            padding: 15px;
            background-color: #f0f0f0;
            border-radius: 5px;
            }
            
        .form-container-wrapper {
            
            width: 380px;
            padding: 20px; 
            background-color: #f0f8ff; 
            border-radius: 8px; 
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }


        .form-container {
            background-color: #f8f9fa; 
            border-radius: 8px; 
            padding: 20px; 
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1); 
        }

           
        .form-group {
            margin-bottom: 20px;
        }


        .form-control-custom {
            font-size: 1rem; 
            padding: 12px; 
        }

            
        .btn-custom {
            font-size: 1rem; 
            padding: 12px 20px; 
            margin-top: 10px;
        }

        </style>
        </head>
        <body>
            <main role="main">
                @RenderBody()
            </main>

            @RenderSection("Scripts", required: false)
        </body>
        </html>
